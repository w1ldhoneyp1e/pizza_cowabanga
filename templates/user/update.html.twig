{% extends "main.html.twig" %}
{% block head %}
    {{parent()}}
    <title>User Update Form</title>
{% endblock %}
{% block content %}
    <a href="{{path('show_all_users')}}">Вернуться к списку пользователей</a>
    <h1>User Update Form</h1>
    
    <form action="{{path('update_user_data', {id: user.getId})}}" method="post" enctype="multipart/form-data">
        <div>
            <label for="first_name">First Name:</label>
            <input name="first_name" id="first_name" type="text" value="{{user.getFirstName()}}">
        </div>
        <div>
            <label for="last_name">Last Name:</label>
            <input name="last_name" id="last_name" type="text" value="{{user.getLastName()}}">
        </div>
        <div>
            <label for="middle_name">Middle Name:</label>
            <input name="middle_name" id="middle_name" type="text" value="{{user.getMiddleName()}}">
        </div>
        <div>
            <label for="gender">Your gender:</label>
            <input name="gender" id="gender" type="text" value="{{user.getGender()}}">
        </div>
        <div>
            <label for="birth_date">Birthday:</label>
            <input name="birth_date" id="birth_date" type="date" value="{{user.getBirthDate()|date('Y-m-d')}}">
        </div>
        <div>
            <label for="email">Email:</label>
            <input name="email" id="email" type="text" value="{{user.getEmail()}}">
        </div>
        <div>
            <label for="phone">Phone:</label>
            <input name="phone" id="phone" type="text" value="{{user.getPhone()}}">
        </div>
        <div>
            <label for="image">Выберите изображение:</label>
            <input type="file" name="image" id="image" accept="image/png, image/jpg, image/jpeg, image/gif" value="">
        </div>
        <img src="/uploads/{{user.getAvatarPath()}}">
        <button type="submit">Submit</button>
    </form>
{% endblock %}