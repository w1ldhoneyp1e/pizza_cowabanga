{% extends "main.html.twig" %}
    {% block head %}
    {{parent()}}
    <title>Add user</title>
    {% endblock %}
{% block content %}
    <a href="{{path('index')}}">Вернуться в меню</a>
    <form action="/user/register" method="post" enctype="multipart/form-data">
        <div>
            <label for="first_name">First Name:</label>
            <input name="first_name" id="first_name" type="text">
        </div>
        <div>
            <label for="last_name">Last Name:</label>
            <input name="last_name" id="last_name" type="text">
        </div>
        <div>
            <label for="middle_name">Middle Name:</label>
            <input name="middle_name" id="middle_name" type="text">
        </div>
        <div>
            <label for="gender">Your gender:</label>
            <input name="gender" id="gender" type="text">
        </div>
        <div>
            <label for="birth_date">Birthday:</label>
            <input name="birth_date" id="birth_date" type="date">
        </div>
        <div>
            <label for="email">Email:</label>
            <input name="email" id="email" type="text">
        </div>
        <div>
            <label for="phone">Phone:</label>
            <input name="phone" id="phone" type="text">
        </div>
        <div>
            <label for="image">Выберите изображение:</label>
            <input type="file" name="image" id="image" accept="image/png, image/jpg, image/jpeg, image/gif">
        </div>
        <button type="submit">Submit</button>
    </form>
{% endblock %}
