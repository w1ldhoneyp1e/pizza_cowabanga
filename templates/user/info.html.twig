{% extends "main.html.twig" %}
{% block head %}
    {{ parent() }}
    <link rel="stylesheet" href="/css/user-info.css">
    <title>твой профиль</title>
{% endblock %}
{% block content %}
    <p class="profile-title">
        <span>твой профиль</span>
        <a href="{{path('delete_user', {id: user.getId})}}" class="delete-button"></a>
    </p>
    <div class="profile">
        <div class="img-container">
            <p class="label">ваше фото</p>
            <img src="/images/profile-photo.png" alt="">
            <div>
                <a href="{{path('show_update_user', {id: user.getId})}}" class="update-button">изменить данные</a>
            </div>
        </div>
        <div class="column-info">
            <div class="container">
                <div class="label">имя</div>
                <div class="value">{{user.getFirstName}}</div>
            </div>
            <div class="container">
                <div class="label">фамилия</div>
                <div class="value">{{user.getLastName}}</div>
            </div>
            <div class="container">
                <div class="label">телефон</div>
                <div class="value">{{user.getPhone}}</div>
            </div>
            <div class="container">
                <div class="label">адрес</div>
                <div class="value">{{user.getAdress}}</div>
            </div>
            <div class="container">
                <div class="label">email</div>
                <div class="value">{{user.getEmail}}</div>
            </div>
        </div>
    </div>
{% endblock %}